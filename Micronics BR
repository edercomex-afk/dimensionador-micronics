import os

# --- LÓGICA DO LOGOTIPO ---
logo_path = "logo.png"

if os.path.exists(logo_path):
    # Se o arquivo existir no GitHub, ele usa o seu arquivo
    col_logo, col_titulo = st.columns([1, 3])
    with col_logo:
        st.image(logo_path, width=350)
    with col_titulo:
        st.title("Dimensionador de Filtro Prensa")
    st.sidebar.image(logo_path, use_container_width=True)
else:
    # Caso o upload falhe, ele usa o link reserva para não ficar vazio
    logo_url = "https://www.cleanova.com/wp-content/uploads/2023/10/Cleanova_Logo_Main_RGB.png"
    col_logo, col_titulo = st.columns([1, 3])
    with col_logo:
        st.image(logo_url, width=350)
    with col_titulo:
        st.title("Dimensionador de Filtro Prensa")
    st.sidebar.image(logo_url, use_container_width=True)
